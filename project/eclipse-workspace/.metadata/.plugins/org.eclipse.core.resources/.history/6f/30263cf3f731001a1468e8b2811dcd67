package org.io.jdbc.ignite.test;



import java.sql.Connection;
import java.sql.DatabaseMetaData;
import java.sql.DriverManager;
import java.sql.ResultSet;

import org.apache.pulsar.client.api.PulsarClient;
import org.apache.pulsar.client.api.Schema;




/**
 * Hello world!
 *
 */
public class App 
{
	private void pulsarClient(){
		PulsarClient client = PulsarClient
		        .serviceUrl("pulsar://localhost:6650")
		        .build();
	}
	
    public static void main( String[] args )
    {
    	
    	
    	
        System.out.println( "Hello World!" );
    	try{
    		
    		// Register JDBC driver.
    		Class.forName("org.apache.ignite.IgniteJdbcThinDriver");
    		 
    		// Open the JDBC connection.
    		Connection connection = DriverManager.getConnection("jdbc:ignite:thin://104.211.24.238");
    		 DatabaseMetaData metadata = connection.getMetaData();
    	        try (ResultSet rs = metadata.getTables(null, null, "ENTITIESTABLEINFO", new String[]{"TABLE"})) {
    	        	System.out.println("Result set:");
    	        	System.out.println(rs);
    	            if (rs.next()) {
    	                String catalogName = rs.getString(1);
    	                String schemaName = rs.getString(2);
    	                String gotTableName = rs.getString(3);
    	              System.out.println(catalogName);
    	            } else {
    	                throw new Exception("Not able to find table: ");
    	            }
    	        }
    		}
    		catch(Exception ex){
    			System.out.println("---"+ex);
    		}
    }
}
